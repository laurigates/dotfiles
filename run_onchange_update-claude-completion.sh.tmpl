{{- if lookPath "claude" -}}
#!/usr/bin/env bash
# run_onchange_update-claude-completion.sh
# Automatically regenerates Claude CLI zsh completion when triggered by chezmoi
#
# Re-runs when:
#   - Claude CLI version changes (update detected)
#   - Generator script is modified
#
# claude version: {{ output "claude" "--version" | trim }}
# generator hash: {{ include "scripts/generate-claude-completion-simple.sh" | sha256sum }}

set -euo pipefail

readonly BLUE='\033[0;34m'
readonly GREEN='\033[0;32m'
readonly YELLOW='\033[1;33m'
readonly NC='\033[0m'

log()     { echo -e "${BLUE}[chezmoi]${NC} $*" >&2; }
success() { echo -e "${GREEN}[chezmoi]${NC} $*" >&2; }
warn()    { echo -e "${YELLOW}[chezmoi]${NC} $*" >&2; }

CHEZMOI_SOURCE_DIR="${CHEZMOI_SOURCE_DIR:-{{ .chezmoi.sourceDir }}}"
COMPLETION_GENERATOR="${CHEZMOI_SOURCE_DIR}/scripts/generate-claude-completion-simple.sh"

if [[ ! -x "$COMPLETION_GENERATOR" ]]; then
    warn "Claude completion generator not found or not executable: $COMPLETION_GENERATOR"
    exit 0
fi

log "Updating Claude CLI zsh completion..."

if "$COMPLETION_GENERATOR"; then
    success "Claude CLI completion updated successfully"
else
    warn "Failed to update Claude CLI completion"
    exit 1
fi

if [[ -n "${CHEZMOI_SOURCE_DIR:-}" ]]; then
    COMPLETION_FILE="${CHEZMOI_SOURCE_DIR}/dot_zfunc/_claude"
    if [[ -f "$COMPLETION_FILE" ]]; then
        log "Claude completion available at: ${COMPLETION_FILE#${CHEZMOI_SOURCE_DIR}/}"
    fi
fi
{{ end -}}
