#!/bin/bash
# Clean managed directories to prevent orphaned files
# Only runs on directories that chezmoi fully manages

{{ if ne .chezmoi.os "windows" -}}
# Clean agents directory (preserve .claude subdirectory)
if [ -d "$HOME/.claude/agents" ]; then
    find "$HOME/.claude/agents" -maxdepth 1 -name "*.md" -type f -delete
fi

# Clean commands directory (preserve .claude subdirectory)
if [ -d "$HOME/.claude/commands" ]; then
    find "$HOME/.claude/commands" -maxdepth 1 -name "*.md" -type f -delete
fi
{{- end }}
