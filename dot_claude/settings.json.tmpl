{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(find:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh pr view:*)",
      "Bash(npm test:*)",
      "mcp__podio-mcp__list_notifications"
    ],
    "deny": [],
    "ask": []
  },
{{- $settingsFile := joinPath .chezmoi.homeDir ".claude" "settings.json" }}
{{- if stat $settingsFile }}
{{- $existing := $settingsFile | include | fromJson }}
  "model": {{ $existing.model | toJson }},
  "feedbackSurveyState": {{ $existing.feedbackSurveyState | toJson }},
{{- else }}
  "model": "sonnet",
  "feedbackSurveyState": {
    "lastShownTime": 1754075292901
  },
{{- end }}
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": {},
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/user-prompt-submit.sh",
            "timeout": 5000
          }
        ]
      }
    ],
    "AssistantResponseStart": [
      {
        "matcher": {},
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/assistant-response-start.sh",
            "timeout": 5000
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": {},
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/assistant-response-complete.sh",
            "timeout": 5000
          }
        ]
      }
    ]
  }
}
