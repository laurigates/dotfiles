{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {},
  "permissions": {
    "deny": [
      "Bash(git add .)",
      "Bash(git add -A)",
      "Bash(git add --all)",
      "Edit(**/CHANGELOG.md)",
      "Write(**/CHANGELOG.md)",
      "MultiEdit(**/CHANGELOG.md)"
    ],
    "ask": [],
    "additionalDirectories": [
      "~/Documents/FVH Vault",
      "~/repos/infrastructure.wiki"
    ]
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": []
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Task|Read|Grep|Search|TodoWrite|mcp__graphiti-memory__search.*|WebFetch|WebSearch|Glob|LS",
        "hooks": []
      },
      {
        "matcher": "mcp__github__create_pull_request",
        "hooks": []
      },
      {
        "matcher": "Bash(git add*)",
        "hooks": []
      }
    ],
    "Stop": [
      {
        "hooks": []
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline-command.sh"
  },
  "alwaysThinkingEnabled": true,
  "defaultMode": "acceptEdits",
  "mcpServers": {
    "context7": {
      "command": "bunx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ]
    },
    "github": {
      "command": "go",
      "args": [
        "run",
        "github.com/github/github-mcp-server/cmd/github-mcp-server@latest",
        "stdio"
      ]
    },
    "sequential-thinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "playwright": {
      "command": "bunx",
      "args": [
        "-y",
        "@playwright/mcp@latest"
      ]
    },
    "zen-mcp-server": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/BeehiveInnovations/zen-mcp-server.git",
        "zen-mcp-server"
      ]
    },
    "graphiti-memory": {
      "command": "npx",
      "args": [
        "-y",
        "@getzep/graphiti-mcp-server"
      ],
      "env": {
        "GRAPHITI_API_KEY": "${GRAPHITI_API_KEY}"
      }
    },
    "podio-mcp": {
      "command": "npx",
      "args": [
        "-y",
        "podio-mcp-server"
      ],
      "env": {
        "PODIO_CLIENT_ID": "${PODIO_CLIENT_ID}",
        "PODIO_CLIENT_SECRET": "${PODIO_CLIENT_SECRET}",
        "PODIO_APP_ID": "${PODIO_APP_ID}",
        "PODIO_APP_TOKEN": "${PODIO_APP_TOKEN}"
      }
    },
    "vectorcode": {
      "command": "uvx",
      "args": [
        "vectorcode-mcp"
      ],
      "env": {
        "VECTORCODE_INDEX_PATH": "${HOME}/.vectorcode"
      }
    }
  },
  "feedbackSurveyState": {
    "lastShownTime": 1754075292901
  }
}
