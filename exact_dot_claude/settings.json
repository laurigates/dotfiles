{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {},
  "hooks": {
    "SessionEnd": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/session-logger.sh",
            "timeout": 10
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "WebFetch(domain:docs.orbstack.dev)",
      "WebFetch(domain:orbstack.dev)",
      "WebFetch(domain:skaffold.dev)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebFetch(domain:kubernetes.io)",
      "WebFetch(domain:argo-cd.readthedocs.io)",
      "WebFetch(domain:argoproj.github.io)",
      "WebFetch(domain:kyverno.io)",
      "WebFetch(domain:argocd-image-updater.readthedocs.io)"
    ],
    "deny": [
      "Bash(git add .)",
      "Bash(git add -A)",
      "Bash(git add --all)",
      "Edit(**/CHANGELOG.md)",
      "Write(**/CHANGELOG.md)",
      "MultiEdit(**/CHANGELOG.md)"
    ],
    "ask": [],
    "defaultMode": "acceptEdits",
    "additionalDirectories": [
      "~/Documents/FVH Vault",
      "~/repos/ForumViriumHelsinki/infrastructure.wiki"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline-command.sh"
  },
  "alwaysThinkingEnabled": true,
  "feedbackSurveyState": {
    "lastShownTime": 1754075292901
  }
}
