{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {},
  "permissions": {
    "defaultMode": "acceptEdits",
    "deny": [
      "Bash(git add .)",
      "Bash(git add -A)",
      "Bash(git add --all)",
      "Edit(**/CHANGELOG.md)",
      "Write(**/CHANGELOG.md)",
      "MultiEdit(**/CHANGELOG.md)"
    ],
    "ask": [],
    "additionalDirectories": [
      "~/Documents/FVH Vault",
      "~/repos/infrastructure.wiki"
    ]
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": []
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Task|Read|Grep|Search|TodoWrite|mcp__graphiti-memory__search.*|WebFetch|WebSearch|Glob|LS|SlashCommand|Skill",
        "hooks": []
      },
      {
        "matcher": "mcp__github__create_pull_request",
        "hooks": []
      },
      {
        "matcher": "Bash(git add*)",
        "hooks": []
      }
    ],
    "Stop": [
      {
        "hooks": []
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline-command.sh"
  },
  "alwaysThinkingEnabled": true,
  "feedbackSurveyState": {
    "lastShownTime": 1754075292901
  }
}
