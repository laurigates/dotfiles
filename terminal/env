export PATH=/opt/puppetlabs/puppet/bin:$HOME/.rbenv/bin:$HOME/bin:$HOME/.cargo/bin:$HOME/.local/bin:/usr/local/bin:/usr/bin:/bin

if command -v nvim >/dev/null 2>&1; then
    export EDITOR='nvim'
    export VISUAL='nvim'
    export SUDO_EDITOR='nvim'
else
    export EDITOR='vim'
    export VISUAL='vim'
    export SUDO_EDITOR='vim'
fi

# ruby environment
eval "$(rbenv init -)"

# nodejs environment
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

export PATH=$PATH:~/.yarn/bin

# should not be used with rbenv as it already sets them and these will override the values
# export GEM_HOME=$HOME/.gems
# export GEM_PATH=$HOME/.gems

# Set default umask
umask 022

# Configure ctrl+o to open selected file in vim
export FZF_DEFAULT_OPTS="--bind='ctrl-o:execute(vim {})+abort'"

# Use ripgrep to exclude files in gitignore and give faster performance
export FZF_DEFAULT_COMMAND="rg --files --hidden"

# Preview directory tree when using Alt+C
export FZF_ALT_C_OPTS="--preview 'tree -C {} | head -200'"

# vim:ft=sh
