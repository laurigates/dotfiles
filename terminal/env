export PATH=$HOME/.rbenv/bin:$HOME/bin:$HOME/.cargo/bin:$HOME/.local/bin:/usr/local/bin:/usr/bin:/bin

# Load rbenv
eval "$(rbenv init -)"

# should not be used with rbenv as it already sets them and these will override the values
# export GEM_HOME=$HOME/.gems
# export GEM_PATH=$HOME/.gems

# Set a more secure umask
umask 077

# Configure ctrl+o to open selected file in vim
export FZF_DEFAULT_OPTS="--bind='ctrl-o:execute(vim {})+abort'"

# Use ripgrep to exclude files in gitignore and give faster performance
export FZF_DEFAULT_COMMAND="rg --files --hidden"

# Preview directory tree when using Alt+C
export FZF_ALT_C_OPTS="--preview 'tree -C {} | head -200'"
