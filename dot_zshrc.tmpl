  {{ if (lookPath "fd") }}
    export FZF_DEFAULT_COMMAND="fd --type f --hidden --follow --exclude '.git' -0 | xargs -0 -r stat -f '%m %N' | sort -nr | sed 's/^[^ ]* //'"
  {{ else }}
    export FZF_DEFAULT_COMMAND="find . -type f -print0 | xargs -0 -r stat -f '%m %N' | sort -nr | sed 's/^[^ ]* //'"
