  {{ else }}
    export FZF_DEFAULT_COMMAND="find . -type f -printf '%T@ %p\n' | sort -nr | sed 's/^[^ ]* //'"
  {{ end }}
{{ end }}

{{/*
# -----------------------------------------------------------------------------
# FZF Preview Command
# -----------------------------------------------------------------------------
# Sets a universal preview command, checking for `bat` and `tree`.
*/}}
{{- $filePreviewer := "cat {}" -}}
{{- if (lookPath "bat") -}}
{{-   $filePreviewer = "bat --style=numbers,changes --wrap never --color always {}" -}}
