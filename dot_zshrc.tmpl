{{- $dirPreviewer := "ls -la {}" -}}
{{- if (lookPath "tree") -}}
{{-   $dirPreviewer = "tree -C {}" -}}
{{- end -}}

export FZF_PREVIEW_COMMAND="if [ -d {} ]; then {{ $dirPreviewer }}; else {{ $filePreviewer }}; fi"

